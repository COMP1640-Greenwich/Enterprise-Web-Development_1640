@{
    ViewData["Title"] = "Home Page";
}

@if(TempData["AddCartMessage"] != null && (bool)TempData["ShowMessage"]){
    <div id="addCartMessage" class="alert alert-success">@TempData["AddCartMessage"]</div>
    <script>
        setTimeout(function() {
            $("#addCartMessage").fadeOut("slow");
        }, 3000);
    </script>
}
<br />
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel" >
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Home/hp.jpg" class="d-block w-100" alt="Slide 1 " style="border-radius:15px" />
        </div>
        <div class="carousel-item">
            <img src="~/images/Home/kiminonawa.png" class="d-block w-100" alt="Slide 2" style="border-radius:15px" />
        </div>
        <div class="carousel-item">
            <img src="~/images/Home/bs_2048x600.jpg" class="d-block w-100" alt="Slide 3" style="border-radius:15px" />
        </div>
    </div>
    <!-- Carousel controls -->
    <a class="carousel-control-prev" href="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

