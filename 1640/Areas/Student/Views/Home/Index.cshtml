@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model List<Article>
@{
    ViewData["Title"] = "Home";
}
@if (TempData["AddCartMessage"] != null && (bool)TempData["ShowMessage"])
{
    <div id="addCartMessage" class="alert alert-success">@TempData["AddCartMessage"]</div>
    <script>
        setTimeout(function () {
            $("#addCartMessage").fadeOut("slow");
        }, 3000);
    </script>
}
<br />
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Home/quote3.jpg" class="d-block w-100" alt="Slide 1 " style="border-radius:15px" />
        </div>
        <div class="carousel-item">
            <img src="~/images/Home/quote2.jpg" class="d-block w-100" alt="Slide 2" style="border-radius:15px" />
        </div>
        <div class="carousel-item">
            <img src="~/images/Home/quote1.jpg" class="d-block w-100" alt="Slide 3" style="border-radius:15px" />
        </div>
    </div>
    <!-- Carousel controls -->
    <a class="carousel-control-prev" href="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9 col-sm-auto pt-3 row gx-3 row gy-3">
                <div class="mb-3">
                    <form class="d-flex">
                        <input class="form-control me-2" name="searchString" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
                <div class="mb-3">
                    @foreach (var Article in Model)
                    {
                        <div class="card" style="border-radius: 15px; background-color: #93e2bb;">
                            <div class="container content py-2 px-2">
                                <div class="" style="position: absolute;top: 10px;right: 10px;padding: 15px 20px;font-weight: bold;color: white;border-radius: 15px;width: auto;height: auto; line-height: normal;text-align: center;">
                                    <a type="button" class="btn btn-success" style="border-radius:15px" href="@Article.DocxUrl" formtarget="_blank"><i class="fa-solid fa-cloud-arrow-down"></i> Download</a>
                                    </div>
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-1">
                                        <img src="https://i.pinimg.com/originals/51/90/10/519010d9ee8167bfe445e616f260f758.png"
                                             alt="@Article.UserName" class="img-fluid rounded-circle border border-dark border-3"
                                             style="width: 70px;">
                                    </div>
                                    <div class=" ms-4">
                                        <h4 class="mb-1" style="text-transform: lowercase capitalize">@Article.UserName</h4>
                                        <p class="card-text">Faculty:   @Article.FacultyName</p>
                                    </div>
                                </div>
                                <hr />

                                    <div class="row no-gutters">
                                        <div class="col-sm-5">
                                        <div class=" hover-zoom">
                                            <img class="card-img" src="@Article.ImageUrl" alt="@Article.Title">
                                        </div>
                                        </div>
                                        <div class="col-sm-7">
                                            <div class="card-body">
                                            <h5 class="card-title">Title:&nbsp @Article.Title</h5>
                                                <p class="card-text">@Article.Description</p>
                                                <div class="float-right">
                                                    <br />                                           
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                            </div>
                        </div>
                        <br />
                    }
                </div>

                       
            </div>

            <div class="col-md-3 col-sm-4 d-none d-md-block pt-3 gy-3 gx-3">
                @if (User.IsInRole("Student"))
                {
                    <div class="card border-primary">
                        <!-- Added border-primary for a colored border -->
                        <div class="card-header text-center bg-danger text-white">
                            <!-- Changed background color and text color -->
                            <h4>Submit Contribution</h4> <!-- Changed header text -->
                        </div>
                        <div class="card-body text-center">
                            <p class="card-text">Welcome to our submission portal. Please select a semester to create your contribution.</p> <!-- Added a paragraph with a description -->
                            <a asp-area="Student" asp-controller="Article" asp-action="SemesterList" class="btn btn-primary mt-3">Choose Semester</a> <!-- Removed unnecessary classes -->
                        </div>
                    </div>
                }
                <br />
                <div class="card">
                    <div class="card-body">
                        <div class="text-center hover-zoom">
                            <img src="https://i.redd.it/90ekftm1ltgy.gif" style="width: 100%; height: auto;" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="card gy-2">

                    <div class="card-body">
                        <p style="text-align:center; font-size:150%">
                            Calendar
                        </p>
                        <img src="https://cdn.dribbble.com/users/26232/screenshots/2833060/drib_cat2_2.gif" style="width: 100%; height: auto;" />
                        <script src="https://lichngaytot.com/Content/Js/Libs/jquery-3.4.1.min.js"></script>
                        <script src="https://lichngaytot.com/Content/Js/Libs/jquery-ui.min.js"></script>
                        <script src="https://lichngaytot.com/Content/Js/Widget/widgetlichthang.js"></script>
                          <script type="text/javascript">document.write('<div id="widgetlichthang-lvsicsoft" style="width:auto;" data-urlimage="" data-startin="1" data-amduongshow="1" data-colorbackground="#ffffff" data-colortoday="#ffff00" data-colorborder="#dddddd" data-coloram="#7f7f7f" data-colorduong="#000000"><div class="css-style-widget"></div><div class="anh-lich-img" style="100%"><img style="width: 100%; height:100%;" src="" /></div> <div id="calendar-widget-lvs" class="lvs-calendar-container" style="width: 100%; float: left;"></div>'); getWidgetLichThang("css-style-widget", "widgetlichthang-lvsicsoft")</script>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div style="display:flex;text-align:center;justify-content:center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @for (var i = 0; i < @ViewBag.numberOfPages; i++)
                {
                    var style = (ViewBag.currentPage == @i) ? "active" : "";
                    <li class="page-item @style">
                        <a class="page-link" asp-route-id="@i" asp-route-searchString="@ViewData["CurrentFilter"]">@(i + 1)</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</body>