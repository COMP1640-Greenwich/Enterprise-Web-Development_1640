@model List<Article>
<style>
    .status-pending {
        background-color: orange;
    }

    .status-rejected {
        background-color: red;
    }

    .status-approved {
        background-color: green;
    }

    .article-status {
    }
</style>
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-sm-auto pt-3 row gx-3 row gy-3">
            <div class="mb-3">
                <form class="d-flex">
                    <h2><i class="fa-solid fa-newspaper"></i> Your Articles</h2>
                    <form class="d-flex" asp-action="MyArticles" method="get">
                        <input type="text" name="searchString" placeholder="Search articles" class="form-control" />
                        <button type="submit" class="btn btn-primary ml-2">Search</button>
                    </form>
                </form>
            </div>
            <div class="mb-3">
                @foreach (var Article in Model)
                {
                    <div class="card" style="border-radius: 15px; background-color: #93e2bb;">
                        <div class="container content py-2 px-2">

                            <div class="article-status @GetStatusClass(Article.Status)" style="position: absolute;top: 10px;right: 10px;padding: 15px 20px;font-weight: bold;color: white;border-radius: 15px;width: auto;height: auto; line-height: normal;text-align: center;">
                                @Article.Status.ToString()
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-1">
                                    <img src="https://cdn-icons-png.flaticon.com/512/3541/3541871.png"
                                         alt="Generic placeholder image" class="img-fluid rounded-circle border border-dark border-3"
                                         style="width: 70px;">
                                </div>
                                <div class=" ms-4">
                                    <h4 class="mb-1" style="text-transform: lowercase capitalize">@Article.UserName</h4>
                                    <p class="card-text">Faculty:   @Article.FacultyName</p>
                                </div>
                            </div>
                            <hr />

                            <div class="row no-gutters">
                                <div class="col-sm-5">
                                    <img class="card-img" src="@Article.ImageUrl" alt="@Article.Title">
                                </div>
                                <div class="col-sm-7">
                                    <div class="card-body">
                                        <h5 class="card-title">Title:&nbsp @Article.Title</h5>
                                        <p class="card-text">@Article.Description</p>
                                        <p class="card-text">@Article.SemesterId</p>
                                        <div class="float-right">
                                            <a type="button" class="btn btn-success btn-rounded" href="@Article.DocxUrl" formtarget="_blank"><i class="fa-solid fa-cloud-arrow-down"></i> Download</a>
                                            @if (Article.Status != Article.StatusArticle.Approve && Article.Status != Article.StatusArticle.Reject)
                                            {
                                                <a type="button" class="btn btn-primary btn-rounded" asp-action="Edit" asp-route-id="@Article.Id"><i class="fa-solid fa-pencil"></i> Edit</a>
                                                <a type="button" class="btn btn-danger btn-rounded" asp-action="Delete" asp-route-id="@Article.Id"><i class="fa-solid fa-trash"></i> Delete</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>
</div>
<div style="display:flex;text-align:center;justify-content:center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (var i = 0; i < @ViewBag.numberOfPages; i++)
            {
                var style = (ViewBag.currentPage == @i) ? "active" : "";
                <li class="page-item @style">
                    <a class="page-link" asp-route-id="@i" asp-route-searchString="@ViewData["CurrentFilter"]">@(i + 1)</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        function confirmEdit() {
            return confirm('Do you want to edit and re-submit this article?');
        }
    </script>
}





@functions {
    string GetStatusClass(Article.StatusArticle status)
    {
        switch (status)
        {
            case Article.StatusArticle.Pending:
                return "status-pending";
            case Article.StatusArticle.Reject:
                return "status-rejected";
            case Article.StatusArticle.Approve:
                return "status-approved";
            default:
                return "";
        }
    }
}
