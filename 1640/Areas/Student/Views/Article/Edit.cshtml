@model ArticleVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Edit Article</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input asp-for="Article.Id" hidden />
                        <input asp-for="UserName" hidden />
                        <input name="id" value="@ViewBag.UserId" hidden />
                        <input asp-for="FacultyId" hidden />

                        <div class="form-group mb-3">
                            <label asp-for="Article.Title">Title</label>
                            <input asp-for="Article.Title" class="form-control" />
                            <span asp-validation-for="Article.Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Article.Description">Description</label>
                            <textarea asp-for="Article.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Article.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Article.ImageUrl">Current Image</label>
                            <img src="@Model.Article.ImageUrl" alt="Current Image" style="width: 100%; height: auto;" />
                            <label>Change Image</label>
                            <input type="file" name="file" class="form-control" accept=".png, .jpg" />
                            <span asp-validation-for="Article.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Article.DocxUrl">Current Docx File</label>
                            <div><a href="@Model.Article.DocxUrl">@Model.Article.DocxUrl</a></div>
                            <label>Change Docx File</label>
                            <input type="file" name="file1" class="form-control" accept=".docx" />
                            <span asp-validation-for="Article.DocxUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input onclick="return confirm('Ask Coordinator for approve new an Article?')" type="submit" value="Edit" class="btn btn-success" />
                            <a asp-controller="Article" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
