@model Article
<form method="post" enctype="multipart/form-data">
    <div class="row p-3">
        <div class="col-12 border-bottom">
            <h2 class="">Create a Article</h2>
        </div>
        <div class="col-8 pt-4">
            <input asp-for="Id" hidden />
            <div class="form-group row">
                <div class="col-4"><label asp-for="Title">Title </label></div>
                <div class="col-8">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label for="Description">Description</label></div>
                <div class="col-8">
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label for="ImageUrl">ImageUrl</label></div>
                <div class="col-8">
                    <input type="file" name="file" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>


            </div>
            <div class="form-group row">
                <div class="col-4"><label for="DocxUrl">DocxUrl</label></div>
                <div class="col-8">
                    <input type="file" name="file1" class="form-control" />
                    <span asp-validation-for="DocxUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                </div>
                    <div class="col-8">
                        <input type="checkbox" class="form-check-input" asp-for="IsBlogActive"/>
                    <label class="form-check-lable" asp-for="IsBlogActive"> You agree to our <a asp-area="" asp-controller="Home" asp-action="Privacy">Terms and Conditions.</a></label>
                    </div>
                
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col mt-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="Article" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
