
@{
    ViewData["Title"] = "Dashboard1";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                Number of articles per semester
            </h3>
        </div>
        <div class="row">
        @model List<Semester>
        @foreach (var semester in Model)
        {
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-danger card-img-holder text-white">
                    <div class="card-body">
                        <img src="/LayoutManager/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                        <h2 class="font-weight-normal mb-3">@semester.Name <i class="mdi mdi-chart-line mdi-24px float-right"></i></h2>
                        <h2 class="mb-5">@ViewBag.ArticleList[@semester.Id]</h2>
                        <h6 class="card-text">Article</h6>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</div>