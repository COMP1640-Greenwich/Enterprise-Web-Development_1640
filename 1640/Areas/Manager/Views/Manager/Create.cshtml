@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutManager.cshtml";
}
@model Faculty
<h2>Create new a Faculty</h2>
<form method="post" class="container">
    <div class="form-group">
        <div class="mt-3 row">
            <label for="Name" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Enter name">
            </div>
        </div>
        <div class="mt-3 row">
            <label for="Description" class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Description" class="form-control" id="Description" placeholder="Enter description">
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}