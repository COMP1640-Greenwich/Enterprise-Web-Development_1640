@using Microsoft.AspNetCore.Mvc.TagHelpers
@model _1640.Models.User

<div class="">
    <h1>Edit Admin</h1>
</div>
<div class="border border-3 p-4" style="border-radius:15px">
    <form method="post">
        <input asp-for="Id" class="form-control" hidden>
        <div class="form-group" style="padding: 3px 20px">
            <label asp-for="FullName" class="form-label">Name</label>
            <input asp-for="FullName" class="form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding: 3px 20px">
            <label asp-for="PhoneNumber" class="form-label">Phone</label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding: 3px 20px">
            <label asp-for="Campus" class="form-label">Campus</label>
            <input asp-for="Campus" class="form-control">
            <span asp-validation-for="Campus" class="text-danger"></span>
        </div>
        <div class="form-group" style="padding: 5px 20px">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
            <button type="submit" class="btn" style="color: #fff;background: #346184">Submit</button>
        </div>
    </form>
</div>