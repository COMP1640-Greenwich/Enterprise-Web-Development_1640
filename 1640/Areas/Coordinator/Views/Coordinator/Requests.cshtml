@model IEnumerable<_1640.Models.Article>
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-sm-auto pt-3 row gx-3 row gy-3">
            <div class="mb-1">
                <form class="d-flex">
                    <h2><i class=" fa-regular fa-bell"></i> Request</h2>
                </form>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info text-center" role="alert">
                    <strong style="font-size:200%">@ViewBag.Message</strong>
                </div>
            }
            <div class="mb-3">
                @foreach (var Article in Model)
                {
                    <div class="card" style="border-radius: 15px; background-color: #93e2bb;">
                        <div class="container content py-2 px-2">
                            <div class="" style="position: absolute;top: 10px;right: 10px;padding: 15px 20px;font-weight: bold;color: white;border-radius: 15px;width: auto;height: auto; line-height: normal;text-align: center;">
                                <a asp-area="Coordinator" asp-controller="Coordinator" asp-action="AddFeedBack" asp-route-id="@Article.Id" class="btn btn-warning">
                                    <i class="fa-solid fa-comment-medical"></i> Add Feedback
                                </a>
                                <a asp-area="Coordinator" asp-controller="Coordinator" asp-action="Approve" asp-route-id="@Article.Id" class="btn btn-primary">
                                    <i class="fa-solid fa-check"></i>  Approve
                                </a>
                                <a asp-area="Coordinator" asp-controller="Coordinator" asp-action="Reject" asp-route-id="@Article.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-xmark"></i>  Reject
                                </a>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-1">
                                    <img src="https://i.pinimg.com/originals/51/90/10/519010d9ee8167bfe445e616f260f758.png"
                                         alt="Generic placeholder image" class="img-fluid rounded-circle border border-dark border-3"
                                         style="width: 70px;">
                                </div>
                                <div class=" ms-4">
                                    <h4 class="mb-1" style="text-transform: lowercase capitalize">@Article.UserName</h4>
                                    <p class="card-text">Faculty:   @Article.FacultyName</p>
                                </div>
                            </div>
                            <hr />

                            <div class="row no-gutters">
                                <div class="col-sm-5">
                                    <div class=" hover-zoom">
                                        <img class="card-img" src="@Article.ImageUrl" alt="Contribution">
                                    </div>
                                </div>
                                <div class="col-sm-7">
                                    <div class="card-body">
                                        <p class="card-text">Create at: @Article.CreateAt.ToString("HH: mm  / dd - MM - yyyy")</p>
                                        
                                        <h4 class="card-title">Title:&nbsp @Article.Title</h4>
                                        <p class="card-text">@Article.Description</p>
                                        <div class="float-right">
                                            <br />
                                            <a type="button" class="btn btn-success" style="border-radius:15px" href="@Article.DocxUrl" formtarget="_blank">
                                                <i class="fa-solid fa-cloud-arrow-down"></i>  Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <br />
                    
                }
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}