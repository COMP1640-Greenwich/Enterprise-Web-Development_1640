@model List<Comment>
@{
    ViewBag.Title = "Show FeedBack";
}

<h2>Show FeedBack</h2>
@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="comment">
                    <h8>-----------------------------------------------------------</h8>
                    <h4>@item.Text</h4>
                    <h8>@item.CommentOn.ToString("HH: mm tt dd - MM - yyyy")</h8>
                    <br />
                    
                </div>
            </div>
        </div>
    </div>
}
<hr/>
<h2>Please input your feedback</h2>
<form method="post">
<div class="row">
    <div class="col-12">
        <input type="hidden" name="id" value="@ViewBag.ArticleId" />
    </div>
    <div class="col-12">
        <textarea class="form-control" name="articleFB" id="txtArticleFB" rows="4"></textarea>
        
    </div>
    <div class="col-10"></div>
    <div class="col-2 py-4">
        <input type="submit" class="btn btn-success btn-rounded" name="Add FeedBack" value="Add FeedBack" />
    </div>
</div>
</form>